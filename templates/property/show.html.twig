{% extends 'base.html.twig' %}

{% block title %}Property{% endblock %}

{% block body %}
    <h1>Property</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ property.id }}</td>
            </tr>
            <tr>
                <th>Picture</th>
                <td>{{ property.picture ? property.picture|json_encode : '' }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ property.name }}</td>
            </tr>
            <tr>
                <th>Type</th>
                <td>{{ property.type }}</td>
            </tr>
            <tr>
                <th>Price</th>
                <td>{{ property.price }}</td>
            </tr>
            <tr>
                <th>Bath</th>
                <td>{{ property.bath }}</td>
            </tr>
            <tr>
                <th>Room</th>
                <td>{{ property.room }}</td>
            </tr>
            <tr>
                <th>Mesure</th>
                <td>{{ property.mesure }}</td>
            </tr>
            <tr>
                <th>Detail</th>
                <td>{{ property.detail }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_property_index') }}">back to list</a>

    <a href="{{ path('app_property_edit', {'id': property.id}) }}">edit</a>

    {{ include('property/_delete_form.html.twig') }}
{% endblock %}
